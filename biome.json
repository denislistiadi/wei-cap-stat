{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "error",
        "noUselessElse": "error"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noDoubleEquals": "error"
      },
      "performance": {
        "noDelete": "error"
      },
      "complexity": {
        "useFlatMap": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "files": {
    "includes": ["**/src/**/*.{js,jsx,ts,tsx,json,md}"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "root": "./"
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  }
}
